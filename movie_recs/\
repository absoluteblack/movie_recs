import numpy as np
import csv

def get_dictionary(filename):

    dictionary = []
    with open(filename) as csvfile:
        movie_reader = csv.DictReader(csvfile)
        dictionary = list(map(lambda row: return row, movie_reader))
    return dictionary

def get_column(dictionary, column):
    return list(map(lambda e: e[column], dictionary))

def get_columns(dictionary, fieldnames):
    return list(zip(*list(map(lambda c: get_column(dictionary, c), fieldnames))))

def group_weighting(num_seen, group_size, group_size_weighting = 2):

    num = group_size / 2
    score = num_seen - num
    score = score ** 2
    score = score * -1
    score = score / (2 * group_size_weighting)
    score = np.exp(score)
    score = 1 / (np.sqrt( 2 * np.pi * group_size_weighting)) * score
    return score

def get_scores(filename, columns, group_size_weighting = 2):
    dictionary = get_dictionary(filename)
    group_size = len(dictionary[0])

